apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: whoami-ingress
  annotations:
    #kubernetes.io/ingress.class: "gce"
    kubernetes.io/ingress.class: "traefik"
    #traefik.ingress.kubernetes.io/router.entrypoints: web
    #spec.ingressClassName: "traefik"
    # crear dir. con "gcloud compute addresses create dir1 --global"
    kubernetes.io/ingress.global-static-ip-name: "dir1"
spec:
  rules:
  - http:
      paths:
      - path: "/*"
        pathType: ImplementationSpecific
        backend:
          service:
            name: whoami-service
            port:
              number: 80
